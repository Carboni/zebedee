<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--<property name="AUDIT_FILE" value="" />-->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="AUDIT_SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
<!--        <syslogHost>192.168.0.8</syslogHost>
        <port>8514</port>-->
        <syslogHost>127.0.0.1</syslogHost>
        <port>514</port>
        <facility>LOCAL1</facility>
        <suffixPattern>[%thread] %logger %msg</suffixPattern>
    </appender>

    <!--<appender name="AUDIT-FILE"
                  class="ch.qos.logback.core.FileAppender">
            <file>${AUDIT_FILE}</file>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <Pattern>
                    %d{yyyy-MM-dd HH:mm:ss} - %msg%n
                </Pattern>
            </encoder>
        </appender>-->

    <!-- Send logs to both console and file audit -->
    <logger name="com.github.onsdigital.zebedee.audit" level="info" additivity="false">
        <appender-ref ref="AUDIT_SYSLOG" />
        <!--<appender-ref ref="AUDIT-FILE" />-->
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
